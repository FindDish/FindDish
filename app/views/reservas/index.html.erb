</center>

<body>

<p id="notice"><%= notice %></p>



<article>
<section>
<h2><em>Reservas Registradas</em></h2>

<table>
  <thead>
    <tr>
      <th>Fecha</th>
      <th>Hora</th>
      <th>Estado</th>

      <th colspan="3">Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @reservas.each do |reserva| %>
      <tr>
        <td><%= reserva.fecha %></td>
        <td><%= reserva.hora %></td>
        <td><%= reserva.estado %></td>
        <td><%= link_to 'Mostar', reserva %></td>
        <td><%= link_to 'Editar', edit_reserva_path(reserva) %></td>
        <td><%= link_to 'Destruir', reserva, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
    <div class="relative">
    <center><%= link_to 'Registrar', new_reserva_path %></center>
    </div>
</section>
</article>

<footer>
  <center><em>Reservaciones </em></center>
</footer>

